<div class='container'>

  <div class='row'>


    <div class='span8'>
      <%= form_for @screen, :html => {:class => 'form'} do |screen| %>
        <div class='legend'>
          <legend class=''>Create a New Screen</legend>
        </div>

        <fieldset>

          <div class='control-group'>
            <%= screen.label :name, :class => 'control-label pull-left' %>
            <div class='controls'>
              <%= screen.text_field :name, :class => 'input-block-level', 'placeholder' => 'Screen Name' %>
            </div>
          </div>

          <%= render :partial => 'screen_form_times', :locals => {:screen => screen} %>

          <div class='control-group'>
            <div class='controls'><%= screen.submit "Create", :class=>'btn btn-success' %></div>
          </div>

        </fieldset>
      <% end %>
    </div>

    <div class='span4'>
      <div class='well'>
        <%= render :partial => 'instructions' %>
      </div>
    </div>

  </div>

</div>
