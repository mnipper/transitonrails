<div class='container'>
  <% if flash[:success] && !flash[:success].blank? %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= flash[:success] %>
    </div>
  <% elsif flash[:error] && !flash[:error].blank? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:notice] && !flash[:notice].blank? %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] && !flash[:alert].blank? %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>
